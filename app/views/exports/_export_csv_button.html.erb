<div class="p-2">
  <%= link_to "Download", '#', "data-toggle" => "modal", 'data-target' => '#exportToCsv', class:'btn btn-primary' %>
</div>

<!-- Modal -->
<div class="modal fade" id="exportToCsv" tabindex="-1" role="dialog" aria-labelledby="exportToCsvLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exportToCsvLabel">Export to CSV</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- <%= link_to 'Download CSV', export_csv_path(format: :csv) %> -->
        <%= link_to '(Sample Page) Download CSV', export_sample_page_path %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
