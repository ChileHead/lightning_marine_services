<!-- Button trigger modal -->
<button type="button" class="btn btn-block btn-outline-primary" data-toggle="modal" data-target="#newPurchaserVendor">
  Add Vendor to <%= @purchaser.name %>
</button>

<!-- Modal -->
<div class="modal fade" id="newPurchaserVendor" tabindex="-1" role="dialog" aria-labelledby="newPurchaserVendorLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newPurchaserVendorLabel">Add New Vendor for <%= @purchaser.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'vendors/purchaser_vendor_form', vendor: Vendor.new, purchaser_id: @purchaser.id %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
