<% content_for :title, "All #{@vendors.count} Vendors" %>

<div class="card p-4">
  <table class=" table table-striped" data-sort-name="name" data-sort-order="desc">
    <thead>
      <tr>
        <th class="py-2">Vendor ID</th>
        <th class="py-2">Vendor</th>
        <th class="py-2">Orders</th>
        <!-- <th class=""></th> -->
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% @vendors.each do |vendor| %>
        <tr class="">

          <td class="py-4">
            <%= vendor.id %>
          </td>


          <td class="py-4">
            <%= vendor.name %>
          </td>


          <td class="py-4">
           <%= link_to "#{vendor.orders.count}", vendor %>
          </td>

          <!-- <td class="py-4">
            <%= link_to 'Show', vendor %> |
            <%= link_to 'Edit', edit_vendor_path(vendor) %> |
            <%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

