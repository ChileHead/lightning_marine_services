<% content_for :title, 'All Vendors' %>

<%= render 'vendors/new_vendor_modal', vendor: Vendor.new %>
<br>
<div class="card p-2">
  <table>
    <thead>
      <tr>
        <th class=""></th>
        <th class="py-2">Vendor</th>
        <th class="py-2">Orders</th>
        <th class=""></th>
        <!-- <th colspan="3"></th> -->
      </tr>
    </thead>

    <tbody>
      <% vendor_count = 0 %>
      <% @vendors.each do |vendor| %>

        <tr class="">

          <td class="pb-4 py-2">
            <%= vendor.id %>
          </td>


          <td class="pb-4 py-2">
            Vendor Name: <%= vendor.name %>
          </td>


          <td class="pb-4 py-2">
           <%= link_to "#{vendor.orders.count}", vendor %>
          </td>

          <td class="pb-4 py-2">
            <%= link_to 'Show', vendor %> |
            <%= link_to 'Edit', edit_vendor_path(vendor) %> |
            <%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

