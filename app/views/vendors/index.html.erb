<div class="card p-4">
  <h1>
    All Vendors
  </h1>
</div>
<br>
<%= render 'vendors/new_vendor_modal', vendor: Vendor.new %>
<br>
<div class="card p-2">
  <table>
    <thead>
      <tr>
        <th class=""></th>
        <th class="py-2">Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% vendor_count = 0 %>
      <% @vendors.each do |vendor| %>

        <tr class="">

          <td class="pb-4">
            <%= vendor_count += 1 %>
          </td>


          <td class="pb-4">
            Vendor Name: <%= vendor.name %>
            Vendor ID: <%= vendor.id %>
          </td>

          <td class="pb-4">
            <%= link_to 'Show', vendor %> |
            <%= link_to 'Edit', edit_vendor_path(vendor) %> |
            <%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%#= link_to 'New Vendor', new_vendor_path %>
