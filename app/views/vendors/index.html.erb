<div class="card p-4">
  <h1>
    All Vendors
  </h1>
</div>
<br>
<%= link_to 'Add Order (root_path)(non functional)', root_path, class:"btn btn-block btn-outline-primary" %>
<br>
<div class="card p-2">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Vendor Options</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vendors.each do |vendor| %>

        <tr class="">

          <td class="pb-10">
            Vendor Name: <%= vendor.name %>
            Vendor ID: <%= vendor.id %>
          <br>
            Purchaser Name: <%= vendor.purchaser.name %>
            Purchaser ID: <%= vendor.purchaser.id %>
          <br>
            Creator Name: <%= vendor.user.name %>
            Creator ID: <%= vendor.user.id %>
          </td>

          <td class="pl-4 pb-4">
            <%= link_to 'Show', vendor %> |
            <%= link_to 'Edit', edit_vendor_path(vendor) %> |
            <%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%#= link_to 'New Vendor', new_vendor_path %>
