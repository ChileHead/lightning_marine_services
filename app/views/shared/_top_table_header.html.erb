
<nav class="navbar navbar-light bg-white border py-4">

<div class="container">

  <div class="grid grid-cols-2 gap-6 justify-content-center">

    <div class="">
      <span class="text-3xl mr-2">
        <%= "#{current_controller.titleize}" %>
        <br>Table
      </span>
    </div>

    <% if params[:sort_option].present? %>
      <% if params[:sort_direction].present? %>
        <% display_sorted_direction = params[:sort_direction] == 'asc' ? 'descending' : 'ascending' %>
      <% end %>

      <div class="pt-4 align-middle">

        <span class="text-base  justify-content-end">
          <span class=" text-gray-600 row justify-content-center"> <%= "#{params[:sort_option].titleize} (#{display_sorted_direction})" %></span>
