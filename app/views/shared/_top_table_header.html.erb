                <% select_me = (@page + 1) == display_offset_page_number ? true : false%>

                <% if select_me == true %>
                  <%= link_to "#{display_offset_page_number}/#{resource.display_humanized_total_pages } (current page)", request.params.merge(page: (display_offset_page_number - 1) ), class:'dropdown-item mr-8' %>
                <% else %>
                  <%= link_to "#{display_offset_page_number}/#{resource.display_humanized_total_pages}", request.params.merge(page: (display_offset_page_number - 1) ), class:'dropdown-item mr-8' %>
