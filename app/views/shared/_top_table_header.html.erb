      <div class="pt-4">
        <p class="nav-link border-2 text-gray-400" type="button">
          Page 1/1
        </p>
      </div>

    <% else %>

      <button class="pt-2" type="button" data-toggle="dropdown" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
