<table class="bg-white table table-striped border border-2">
  <thead>
    <tr class="col-3">
      <th>  <%= link_to "#{current_controller.singularize.titleize} ID", request.params.merge(sort_option: 'id', sort_direction: sort_direction ) %>  </th>
      <th>  <%= link_to "#{current_controller.singularize.titleize}", request.params.merge(sort_option: 'name', sort_direction: sort_direction ) %>  </th>
      <th>  <%= link_to "#{current_controller.singularize.titleize} Orders", request.params.merge(sort_option: 'order_amount', sort_direction: sort_direction ) %>  </th>
    </tr>
  </thead>

  <tbody id="table-body">
    <%# resource_main.paginate.each do |resource| %>
    <% resource_main.each do |resource| %>
      <tr class="col-3">
        <td class=" align-middle font-light">
          <%= resource.id %>
        </td>
        <td class=" align-middle font-light">
          <%= link_to "#{resource.name}", resource %>
        </td>
        <td class=" align-middle font-light">
         <%= link_to "#{resource.orders.count}", resource %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
