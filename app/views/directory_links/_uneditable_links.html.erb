<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
</head>

<% if current_user.has_role? :admin %>
  <% if (@directory_link.in? DirectoryLink.predefined_directory_links) %>

    <% case @directory_link.title %>
    <% when 'Heroku (Hosting Service)' %>
          <label for="username" class="pr-2 mt-3 font-bold ">Email:</label>
          <input class="form-control text-center" type="text" name="username" id="username" value="<%= env_dig("HEROKU_EMAIL") %>" disabled=true />
          <label for="password" class="py-2 pr-2 mt-3 font-bold ">Password:</label>
          <input class="form-control text-center" type="password" name="password" id="password" value="<%= env_dig("HEROKU_PASS") %>" disabled=true  />
          <i class="bi bi-eye-slash text-2xl pl-1 mt-2" id="togglePassword"></i>
    <% when 'Gmail Account'%>
          <label for="username" class="pr-2 mt-3 font-bold ">Email:</label>
          <input class="form-control text-center" type="text" name="username" id="username" value="<%= env_dig("GMAIL_SMTP_USER") %>" disabled=true />
          <label for="password" class="py-2 pr-2 mt-3 font-bold ">Password:</label>
          <input class="form-control text-center" type="password" name="password" id="password" value="<%= env_dig("GMAIL_SMTP_PASSWORD") %>" disabled=true  />
          <i class="bi bi-eye-slash text-2xl pl-1 mt-2" id="togglePassword"></i>
    <% when 'Name Cheap' %>
            <label for="username" class="pr-2 mt-3 font-bold ">Username:</label>
            <input class="form-control text-center" type="text" name="username" id="username" value="<%= env_dig("NAMECHEAP_USER") %>" disabled=true />
          <label for="username" class="pr-2 mt-3 font-bold ">Email:</label>
          <input class="form-control text-center" type="text" name="username" id="username" value="<%= env_dig("NAMECHEAP_EMAIL") %>" disabled=true />
          <label for="password" class="py-2 pr-2 mt-3 font-bold ">Password:</label>
          <input class="form-control text-center" type="password" name="password" id="password" value="<%= env_dig("NAMECHEAP_PASS") %>" disabled=true  />
          <i class="bi bi-eye-slash text-2xl pl-1 mt-2" id="togglePassword"></i>
    <% when 'AWS S3 (Photo Storage)'%>
          <label for="username" class="pr-2 mt-3 font-bold ">Email:</label>
          <input class="form-control text-center" type="text" name="username" id="username" value="<%= env_dig("AWS_EMAIL") %>" disabled=true />
          <label for="password" class="py-2 pr-2 mt-3 font-bold ">Password:</label>
          <input class="form-control text-center" type="password" name="password" id="password" value="<%= env_dig("AWS_PASS") %>" disabled=true  />
          <i class="bi bi-eye-slash text-2xl pl-1 mt-2" id="togglePassword"></i>
    <% end %>

  <% end %>
<% end %>

<script type="text/javascript">

  togglePassword.addEventListener('click', function (e) {
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    this.classList.toggle('bi-eye');
  });
</script>
