<div class="pb-3">
  <% if  @directory_link.in? DirectoryLink.predefined_directory_links %>

      <div class="p-1 my-2">
        <button type="button" class="btn btn-outline-secondary hover:mx-12" disabled>
          <div class="align-middle">
            Edit App Link/Info/Service
          </div>
        </button>

        <div class="text-gray-500 -mt-8 opacity-0 transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-125 hover:opacity-100 hover:text-3xl hover:text-gray-600 hover:rounded">
          <span class="hover:bg-red-200 py-3 px-2">
            Default service, cannot edit.
          </span>
        </div>
      </div>

  <% else %>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-secondary " data-toggle="modal" data-target="#editModalAppInfo">
      <span class="align-middle">
        Edit App Link/Info/Service
      </span>
    </button>
    <!-- Modal -->
    <div class="modal fade" id="editModalAppInfo" tabindex="-1" role="dialog" aria-labelledby="editModalAppInfoLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">

        <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title" id="editModalAppInfoLabel">
              Edit App Info
            </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <div class="text-4xl font-semibold">
              Edit App Info
            </div>
            <hr>
            <%= render 'form', directory_link: @directory_link %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>

        </div>

      </div>
    </div>

  <% end %>


</div>
