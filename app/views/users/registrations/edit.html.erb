<% content_for :title, "Account Settings" %>
<div class="py-16">
  <div class="card py-4 text-xl">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%#= render "devise/shared/error_messages", resource: resource %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field pb-8">
        <span class="text-2xl font-normal">
           <%= f.label :email %><br />
        </span>
        <div class="px-4">
          <div class="mx-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control text-center" %>
          </div>
        </div>
      </div>

      <div class="field pb-8">
        <span class="text-2xl font-normal">
           Phone Number
        </span>
        <br />
        <div class="px-4">
          <div class="mx-8">
              <%= f.text_field :phone_number, autofocus: true, class:"form-control text-center" %>
          </div>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>


      <div class="field pb-8">
        <div class="px-4">
          <div class="mx-8">
            <span class="text-2xl font-normal">
               <%= f.label :password, "Password" %> <i>(leave blank if you don't want to change it)</i><br />
            </span>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control text-center" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>

          </div>
        </div>
      </div>

      <div class="field pb-8">
        <span class="text-2xl font-normal">
           <%= f.label :password_confirmation %><br />
        </span>
        <div class="px-4">
          <div class="mx-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="field pb-8">
        <span class="text-2xl font-normal">
           <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        </span>
        <div class="px-4">
          <div class="mx-8">
            <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control text-center" %>
          </div>
        </div>
      </div>

      <div class="pb-4">
        <%= f.submit "Update", class:'btn btn-primary' %>
      </div>
    <% end %>

    <hr>

    <div class="py-8">
      <div class="text-2xl font-normal">
        Cancel my account
      </div>

      <p>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? Once canceled you will need to be reinvited to join this application again." }, method: :delete %>
      </p>

    </div>
  </div>
</div>
